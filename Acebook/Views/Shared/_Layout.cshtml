<!DOCTYPE html>
<html lang="en-GB">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Acebook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Acebook.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Acebook</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetInt32("user_id") != null)
                        {
                            <li class="nav-item">
                                <a title="Takes you to your feed." class="nav-link text-dark" asp-area=""
                                   asp-controller="Home" asp-action="Index">My Feed</a>
                            </li>
                            <li class="nav-item">
                                <a title="Takes you to your Friends List." class="nav-link text-dark" asp-area=""
                                   asp-controller="Friends" asp-action="Index">My Friends</a>
                            </li>
                        }
                    </ul>

                    <div class="text-end">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                @if (Context.Session.GetInt32("user_id") != null)
                                {
                                    <form action="/logout" method="post" style="display: inline;">
                                        <button type="Submit" title="Log out and end your session on Acebook."
                                                class="btn btn-link nav-link text-dark">Log Me Out</button>
                                    </form>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- ⭐ ALL PAGE CONTENT MUST LIVE INSIDE THIS WRAPPER -->
    <div class="flex-grow-1">

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger fade show" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="container mt-3">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <h4 class="alert-heading">Missing Required Fields!</h4>
                    <hr>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            }
        </div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>


    </div>
    <!-- END FLEX-GROW WRAPPER -->

    <!-- FOOTER -->
    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2026 - Acebook - Created by Moonbeam
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
