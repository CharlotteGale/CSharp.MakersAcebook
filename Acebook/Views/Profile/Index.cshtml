<div class="container">
    <div class="profile-content-grid">

        <div class="profile-card">
            <h2>Personal Details</h2>
            <p><strong>Location:</strong> London (placeholder)</p>
            <p><strong>Date of Birth:</strong> @Model.DateOfBirth?.ToShortDateString()</p>
        </div>

        <div class="profile-card">
            <h2>Highlights</h2>
            <p>Nothing to show yet.</p>
        </div>

        <div class="profile-card profile-card--full">
            <h2>Make a Post</h2>

            <form action="/posts" method="post">
                <div class="mb-3">
                    <textarea 
                        name="content"
                        class="post-box"
                        placeholder="What's on your mind?"></textarea>
                </div>

                <button type="submit" class="post-btn">Post</button>
            </form>
        </div>  

<!-- Recent Posts (full width row) -->

<div class="profile-card--full">

    <!-- Section title OUTSIDE of any card -->
    
    <h1 class="h3 mb-3">Recent posts</h1>

    @if (Model.RecentPosts == null || !Model.RecentPosts.Any())
    {
        <div class="post-card mb-3">
            <div class="card-body text-muted">
                No posts yet.
            </div>
        </div>
    }
    else
    {
        @foreach (var post in Model.RecentPosts)
        {
            <div class="post-card mb-3">
                <div class="card-body">

                    <!-- Header: user icon + name + timestamp -->
                    <div class="d-flex align-items-start justify-content-between gap-3">
                        <div class="d-flex align-items-center gap-2">
                            <div class="profile-icon" title="@Model.Name">
                                @Model.Name.Substring(0,1).ToUpper()
                            </div>
                            <div class="fw-semibold">@Model.Name</div>
                        </div>

                        <div class="text-muted small">
                            @post.CreatedAt.ToString("dd MMM yyyy")
                        </div>
                    </div>

                    <!-- Post content -->
                    <div class="mt-2">
                        <div class="text-body">@post.Content</div>
                    </div>

                </div>
            </div>
        }
    }
</div>



    </div>
</div>
