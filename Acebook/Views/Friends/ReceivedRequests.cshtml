<div class="nav-button-container d-flex align-items-center mb-4">
  <a class="friend-navigation-btn" asp-controller="Friends" asp-action="Index">Friends</a>
  <a class="friend-navigation-btn" asp-controller="Friends" asp-action="not_friends_yet">Potential Friends</a>
</div>

<div class="row g-5">
  <div class="col-md-6">
    <h2 class="mb-4">Friend Requests</h2>
    @if (((List<acebook.Models.FriendRequest>)ViewBag.ReceivedRequests).Any())
    {
      @foreach (var req in (List<acebook.Models.FriendRequest>)ViewBag.ReceivedRequests)
      {
        <div class="friend-card w-100 mb-3">
          <div class="row g-0 align-items-center h-100">
            <div class="col-4 d-flex justify-content-center">
              <div class="avatar-icon">@req.User?.Name[0]</div>
            </div>
            <div class="col-8 d-flex flex-column justify-content-between h-100 p-2">
              <div>
                <h5 class="mb-0 text-truncate">@req.User?.Name</h5>
                <p class="small text-muted mb-1">Wants to be friends!</p>
              </div>
              <div class="friend-card-footer">
                <div class="row g-2">
                  <div class="col-6">
                    <form asp-action="AcceptRequest" method="post">
                      <input type="hidden" name="requestSenderId" value="@req.User?.Id" />
                      <input type="hidden" name="requestId" value="@req.Id" />
                      <button class="friend-card-btn" type="submit">Accept</button>
                    </form>
                  </div>
                  <div class="col-6">
                    <form asp-action="RejectRequest" method="post">
                      <input type="hidden" name="requestId" value="@req.Id" />
                      <button class="friend-card-remove-btn" type="submit">Reject</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      }
    }
    else
    {
      <div class="p-4 border rounded bg-light text-center">
        <p class="text-muted mb-0">No requests received.</p>
      </div>
    }
  </div>

  <div class="col-md-6">
    <h2 class="mb-4">Sent Requests</h2>
    @if (((List<acebook.Models.FriendRequest>)ViewBag.SentRequests).Any())
    {
      @foreach (var sent in (List<acebook.Models.FriendRequest>)ViewBag.SentRequests)
      {
        <div class="friend-card w-100 mb-3">
          <div class="row g-0 align-items-center h-100">
            <div class="col-4 d-flex justify-content-center">
              <div class="avatar-icon">@sent.Friend?.Name[0]</div>
            </div>
            <div class="col-8 d-flex flex-column justify-content-between h-100 p-2">
              <div>
                <h5 class="mb-0 text-truncate">@sent.Friend?.Name</h5>
                <p class="small text-muted mb-1">@sent.Friend?.Email</p>
              </div>
              <div class="friend-card-footer">
                <form asp-action="RejectRequest" method="post">
                  <input type="hidden" name="requestId" value="@sent.Id" />
                  <button class="friend-card-remove-btn" type="submit">Cancel Request</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      }
    }
    else
    {
      <div class="p-4 border rounded bg-light text-center">
        <p class="text-muted mb-0">No pending sent requests.</p>
      </div>
    }
  </div>
</div>