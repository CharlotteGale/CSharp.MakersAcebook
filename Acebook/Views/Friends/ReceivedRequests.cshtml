<h2>Friend Requests</h2>
@if(((List<acebook.Models.FriendRequest>)ViewBag.ReceivedRequests) .Any()){
    @foreach (var req in (List<acebook.Models.FriendRequest>)ViewBag.ReceivedRequests)
    {
        <div class="request-box">
            <p><strong>@req.User?.Name</strong> wants to be your friend!</p>
            <form asp-action="AcceptRequest" method="post">
                <input type="hidden" name="requestSenderId" value="@req.User?.Id" />
                <input type="hidden" name="requestId" value="@req.Id" />
                <button type="submit">Accept</button>
            </form>
            <form asp-action="RejectRequest" method="post">
                <input type="hidden" name="requestId" value="@req.Id" />
                <button type="submit">Reject</button>
            </form>
        </div>
    } 
}else
    {<p>No Requests Received</p>}
<br />

<h2>Sent Requests</h2>
@if(((List<acebook.Models.FriendRequest>)ViewBag.SentRequests).Any()){
    @foreach (var sent in (List<acebook.Models.FriendRequest>)ViewBag.SentRequests)
    {
        <div class="request-box">
            <p><strong>@sent.Friend?.Name</strong> has recieved your request.</p>
            <form asp-action="RejectRequest" method="post">
                <input type="hidden" name="requestId" value="@sent.Id" />
                <button type="submit">Delete</button>
            </form>
        </div>
    }
}else
    {<p>No Pending Friend Requests</p>}