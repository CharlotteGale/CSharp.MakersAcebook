<div class="friends-container">

    <div class="friends-header">
        <h1 class="friends-title">Suggested Friends</h1>

        <div class="friends-nav">
            <a asp-action="Index" class="friends-link">Friends</a>
            <a asp-action="requests" class="friends-link">Requests</a>
        </div>
    </div>

    <ul class="friends-list">
        @if (ViewBag.NotFriends != null && ((List<acebook.Models.User>)ViewBag.NotFriends).Any())
        {
            foreach (var newFriend in (List<acebook.Models.User>)ViewBag.NotFriends)
            {
                <li class="friend-item">

                    <div class="friend-info">
                        <span class="friend-name">@newFriend.Name</span>
                        <span class="friend-email">@newFriend.Email</span>
                    </div>

                    <div class="friend-actions">
                        @if (((HashSet<int>)ViewBag.Pending).Contains(newFriend.Id))
                        {
                            <span class="pending-label">Pending</span>
                        }
                        else
                        {
                            <form action="/friends/not_friends_yet" method="post">
                                <input type="hidden" name="profileId" value="@newFriend.Id" />
                                <button type="submit" class="friend-add-btn">Add Friend</button>
                            </form>
                        }
                    </div>

                </li>
            }
        }
        else
        {
            <li class="no-friends-placeholder">
                No suggested friends right now â€” check back later.
            </li>
        }
    </ul>

</div>
