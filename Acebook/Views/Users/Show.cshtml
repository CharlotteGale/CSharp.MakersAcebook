@model acebook.Models.UserProfileViewModel;

@* @{
  var photo = string.IsNullOrWhiteSpace(Model.ProfilePhotoUrl)
    ? "/images/default-avatar.png"
    : Model.ProfilePhotoUrl;
} *@

<div class="container mt-3">
  <div class="d-flex align-items-center gap-3">
    @* <img src="@photo" alt="@Model.Name profile photo" style="width:72px;height:72px;border-radius:50%;object-fit:cover;" /> *@
    <div class="profile-icon">@Model.Name?.FirstOrDefault()</div>
    <h1 class="m-0">@Model.Name</h1>
  </div>

  <hr />

  <h2>Recent posts</h2>
  @if (!Model.RecentPosts.Any())
  {
    <p>No posts yet.</p>
  }
  else
  {
    <ul class="list-group mb-4">
      @foreach (var post in Model.RecentPosts)
      {
        <li class="list-group-item">@post.Content</li>
      }
    </ul>
  }

  <h2>Friends</h2>
  @if (!Model.Friends.Any())
  {
    <p>No friends yet.</p>
  }
  else
  {
    <ul class="list-group">
      @foreach (var friend in Model.Friends)
      {
        <li class="list-group-item">
          <a href="/users/@friend.Id">@friend.Name</a>
        </li>
      }
    </ul>
  }
</div>